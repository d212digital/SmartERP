@inject Serenity.Web.IDynamicScriptManager DynamicScriptManager
<meta charset="utf-8" />
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta http-equiv="Content-Type" content="text/html;charset=utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" />
<link rel="home" id="ApplicationPath" href="~/" />
<link rel="icon" type="image/x-icon" href="~/favicon.ico" />
@Html.StyleBundle("Base")
@Html.StyleBundle("Site")
@if (System.Globalization.CultureInfo.CurrentUICulture.TextInfo.IsRightToLeft)
{
    @Html.Stylesheet("~/Content/site/site.rtl.css")
    <style>
        .skin-glass-001-style-10.sidebar-mini.sidebar-collapse .main-header .navbar {
            margin-left: 0px !important
        }

        .skin-glass-001-style-10.sidebar-mini.sidebar-collapse .content-wrapper, .skin-glass-001-style-10.sidebar-mini.sidebar-collapse .right-side, .skin-glass-001-style-10.sidebar-mini.sidebar-collapse .main-footer {
            margin-left: 0px !important;
        }
    </style>
}
@if (true)
{
    var culture = new ScriptCulture();

    if (((byte)culture.DateSeparator.Trim().ToCharArray()[0]) == 15)
    {
        culture.DateSeparator = "/";
    }

    <script type="application/json" id="ScriptCulture">@Html.Raw(Serenity.JSON.Stringify(culture))</script>
}

<script type="text/javascript">window.paceOptions = { startOnPageLoad: false, ajax: { trackMethods: ['GET', 'POST'], trackWebSockets: false, ignoreURLs: [] } };</script>
@Html.ScriptBundle("Base")
@Html.ScriptBundle("Site")
@Html.LocalTextScript("Site")

<script type="text/javascript">
    @Html.Raw(DynamicScriptManager.GetScriptText("Lookup.Administration.Language"))
    @Html.Raw(DynamicScriptManager.GetScriptText("RegisteredScripts"))
</script>